<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sean's PassThis Password Manager" Height="400" Width="600" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="/sec_bg.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="47*" />
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>

        <!-- ListBox for sites -->
        <ListBox x:Name="SitesListBox" Grid.Column="0" Margin="10,10,10,10" SelectionChanged="SitesListBox_SelectionChanged" Grid.ColumnSpan="2" Background="#B2FFFFFF" />

        <!-- Input and Controls -->
        <StackPanel Grid.Column="2" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Site:" FontWeight="Bold" Foreground="White" />
            <TextBox x:Name="txtSite" />

            <TextBlock Text="Username:" FontWeight="Bold" Foreground="White" />
            <TextBox x:Name="txtUsername" />

            <TextBlock Text="Password:" FontWeight="Bold" Foreground="White" />
            <PasswordBox x:Name="txtPassword" />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save" Click="BtnSave_Click" Width="75" Margin="5" FontWeight="Bold" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5BD8D"/>
                            <GradientStop Color="#FFDA6D12" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Delete" Click="BtnDelete_Click" Width="75" Margin="5" FontWeight="Bold" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF7A7A7"/>
                            <GradientStop Color="#FFB50E0E" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Copy Password" Click="BtnCopyPassword_Click" Width="100" Margin="5" FontWeight="Bold" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF9FC3EC"/>
                            <GradientStop Color="#FF1374E0" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <TextBox x:Name="idBox" TextWrapping="Wrap" Width="120" AutomationProperties.Name="idBox" Background="{x:Null}" Visibility="Hidden"/>
            <Grid Height="173">
                <TextBox x:Name="GenOut" HorizontalAlignment="Left" Margin="125,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" FontWeight="Bold"/>
                <Button x:Name="GenPassButton" Content="Generate Pass" HorizontalAlignment="Left" Margin="37,148,0,0" VerticalAlignment="Top" Width="83" Click="GenPass" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFBBF7BE"/>
                            <GradientStop Color="#FF00FF10" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Grid>
        </StackPanel>
        <Rectangle x:Name="masterFrame" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="364" Margin="10,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="580" Visibility="Hidden">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2B3344"/>
                    <GradientStop Color="#FF2D4F58" Offset="1"/>
                    <GradientStop Color="#FF989CA4" Offset="0.518"/>
                    <GradientStop Color="#FF989CA4" Offset="0.424"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid x:Name="LockPanel" Grid.ColumnSpan="4" Margin="10,10,10,10">
            <Grid.Background>
                <ImageBrush ImageSource="/security1.jpg"/>
            </Grid.Background>
            <Label Content="Please Enter Your  Master Password" HorizontalAlignment="Left" Margin="150,33,0,0" VerticalAlignment="Top" Width="276" FontWeight="Bold" FontSize="16" Foreground="White" Visibility="Visible"/>
            <PasswordBox x:Name="MasterPassText" HorizontalAlignment="Left" Margin="198,115,0,0" VerticalAlignment="Top" Width="180" Visibility="Visible"/>
            <Button x:Name="MasterLogin" Content="Login" HorizontalAlignment="Left" Margin="288,138,0,0" VerticalAlignment="Top" Width="90" Height="26" Visibility="Visible" FontWeight="Bold" Click="AuthMaster" IsDefault="True">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9ED8A1"/>
                        <GradientStop Color="#FFE2FDE4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="CreateMasterButton" Content="Create" HorizontalAlignment="Left" Margin="198,138,0,0" VerticalAlignment="Top" Width="85" FontWeight="Bold" Height="26" Click="MasterCreatePass">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE8DBB0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBox x:Name="ErrorBox" HorizontalAlignment="Left" Margin="187,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" Background="{x:Null}" Foreground="#FFB70000" FontWeight="Bold" Height="44" FontSize="16" BorderBrush="{x:Null}"/>
            <Button x:Name="resetMasterPassButton" Content="Reset" HorizontalAlignment="Left" Margin="198,138,0,0" VerticalAlignment="Top" Width="85" FontWeight="Bold" Height="26" Click="resetMasterPass" Visibility="Hidden">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE8DBB0"/>
                        <GradientStop Color="#FF01A7A4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </Grid>

    </Grid>
</Window>
